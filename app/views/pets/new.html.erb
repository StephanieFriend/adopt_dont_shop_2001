<%= form_tag("/shelters/#{@shelter.id}/pets", method: :post) do %>

  <%= label_tag :picture %>
  <%= text_field_tag :image %>

  <%= label_tag :name %>
  <%= text_field_tag :name %>

  <%= label_tag :description %>
  <%= text_field_tag :description %>

  <%= label_tag :age %>
  <%= number_field_tag :approximate_age %>

  <%= label_tag :gender %>
  <%= text_field_tag :sex %>

  <%= submit_tag "Create Pet" %>

<% end %>